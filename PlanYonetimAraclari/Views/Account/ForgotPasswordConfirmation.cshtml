@{
    ViewData["Title"] = "Şifre Sıfırlama Talebi - Plan345";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link type="image/png" sizes="96x96" rel="icon" href="~/icons8-plan-96.png">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <div class="min-h-screen flex items-center justify-center p-4">
        <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
            <div class="text-center mb-8">
                <div class="flex items-center justify-center mb-6">
                    <i class="fas fa-tasks text-blue-500 text-2xl"></i>
                    <a href="/" class="text-2xl font-bold tracking-tight text-gray-900 ml-2">Plan<span class="text-blue-500">345</span></a>
                </div>
                <h2 class="text-2xl font-semibold text-gray-900">Şifre Sıfırlama Bağlantısı Gönderildi</h2>
            </div>

            <div class="text-center">
                <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-8">
                    <i class="fas fa-check-circle text-green-500 text-4xl mb-4"></i>
                    <p class="text-gray-700 mb-2">E-posta adresinize şifre sıfırlama bağlantısı gönderilmiştir.</p>
                    <p class="text-gray-500 text-sm">Lütfen e-posta kutunuzu kontrol edin ve bağlantıya tıklayarak şifrenizi sıfırlayın.</p>
                </div>

                <div class="mt-6">
                    <a href="/Account/Login" class="inline-flex items-center justify-center px-5 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                        <i class="fas fa-arrow-left mr-2"></i> Giriş Sayfasına Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html> 